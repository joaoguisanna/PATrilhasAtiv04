using System;

namespace PATrilhasAtiv04

{
	class Program
	{
		public static void Main(string[] args)
		{
			
			
			Console.WriteLine("Você deseja adicionar açúcar ao seu café?");
			string acucar = (Console.ReadLine().ToLower());
			 
			 
			 
			 
			 Console.WriteLine("Você deseja adicionar leite ao seu café?");
			 string leite = (Console.ReadLine().ToLower());
			
			 if  (leite == "sim" || acucar == "sim")
			{
				Console.WriteLine("Café com adicional preparado!");

			}
			
			else
			{
				Console.WriteLine("Aproveite seu café!");
		
			}
			
	
				
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
