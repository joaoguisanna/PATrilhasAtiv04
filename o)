using System;

namespace PATrilhasAtiv04

{
	class Program
	{
		public static void Main(string[] args)
		{
			
			
			Console.WriteLine("voce deseja cancelar a operação");
			string cancelar = Convert.ToString (Console.ReadLine().ToLower());
			 
			
			
			
			
			if  (cancelar != "sim")
			{
				Console.WriteLine("ok, vamos confirmar a operação");

			}
			
			else
			{
					Console.WriteLine("por favor, confirme o cancelamento da operação");
			}
			
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
