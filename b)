using System;

namespace PATrilhasAtiv04
{
	class Program
	{
		public static void Main(string[] args)
		{
			
			
			Console.WriteLine("Você deseja comprar um carro novo?");
			 string usuario = (Console.ReadLine());
			
			
			Console.WriteLine("Você tem dinheiro o suficiente para esta ação?");
			string dinheiro = (Console.ReadLine());
			
			if (usuario == "sim" || dinheiro == "sim")
			{
				Console.WriteLine("Parabéns, você pode comprar um carro novo!");

			}
			
			else
			{
				Console.WriteLine("Você não pode comprar um carro novo!");
			
			}
			
	
				
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
