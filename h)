using System;

namespace PATrilhasAtiv04

{
	class Program
	{
		public static void Main(string[] args)
		{
			
			
			Console.WriteLine("você deseja comprar um produto?");
			string compra = Convert.ToString (Console.ReadLine().ToLower());
			 
			 
			 
			
			if  ((compra == "sim") || (compra == "s"))
			{
				Console.WriteLine("obrigado pela compra!");

			}
			else
			{
				Console.WriteLine("desculpe não poder ajudar!");

			}
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
